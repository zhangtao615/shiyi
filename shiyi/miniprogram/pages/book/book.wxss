/* pages/book/book.wxss */
.btn{
  height: 150rpx;
  width: 150rpx;
  border-radius: 0;
  color: #ccc;
  margin-top: 10rpx;
  margin-left: 30rpx;
  position: relative;
}
.input{
  border-bottom: 1rpx solid rgb(238, 231, 231) ;
}
.desc{
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  color:#495060;

}
.btn image{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
